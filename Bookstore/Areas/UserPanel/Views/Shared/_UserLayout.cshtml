@{
    Layout = null;
    var title = ViewData["Title"] ?? "SatırSatır.com";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Kitap alışverişinin en güvenilir adresi SatırSatır.com" />
    <title>@title - SatırSatır.com</title>

    <link rel="icon" type="image/png" href="~/favicon.png" />
    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
   

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
</head>
<body>

    <!-- Navbar User -->
    @await Html.PartialAsync("~/Areas/UserPanel/Views/Shared/Partials/_NavbarUser.cshtml")

    <!-- Ana İçerik -->
    <main class="container mt-4">
        @await Html.PartialAsync("~/Views/Shared/_ToastPartial.cshtml")
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer text-center mt-5 py-3 border-top small text-muted">
        &copy; @DateTime.Now.Year - SatırSatır.com | Tüm hakları saklıdır.
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/shared/toast.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
