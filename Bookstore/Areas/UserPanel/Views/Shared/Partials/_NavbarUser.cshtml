@using Microsoft.AspNetCore.Identity
@using Bookstore.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<nav class="navbar navbar-expand-lg navbar-user shadow-sm">
	<div class="container">
		<!-- Logo -->
		<a class="navbar-brand" asp-area="UserPanel" asp-controller="Home" asp-action="Index">
			<img src="~/images/sslogoo.png" alt="SatırSatır.com" />
		</a>

		<!-- Toggler -->
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar" aria-controls="userNavbar" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<!-- Menu -->
		<div class="collapse navbar-collapse" id="userNavbar">


			<!-- Kullanıcı ve Çıkış -->
			<ul class="navbar-nav ms-auto align-items-center">
				@if (SignInManager.IsSignedIn(User))
				{
					var currentUser = await UserManager.GetUserAsync(User);
					<li class="nav-item me-3 text-user-light d-flex align-items-center">
						<i class="bi bi-person-circle me-1"></i> @currentUser?.Name
					</li>
				}
				<li class="nav-item">
					<a class="nav-link position-relative" asp-area="UserPanel" asp-controller="Cart" asp-action="Index">
						<i class="bi bi-cart-fill me-1"></i> Sepetim

					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link position-relative" asp-area="" asp-controller="Login" asp-action="Logout">
						<i class="bi bi-box-arrow-right me-1"></i> Çıkış Yap
					</a>
				</li>
			</ul>
		</div>
	</div>
</nav>