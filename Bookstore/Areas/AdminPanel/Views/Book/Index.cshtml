@model List<Bookstore.Models.DTOs.Book.Book_DTO>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mt-4">

    <!-- Üst Satır: Başlık ve Sağ Butonlar -->
    <div class="d-flex justify-content-end align-items-center">
       

        <div class="d-flex just gap-2">
            <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-person-circle"></i> Profil
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-clipboard"></i> Yönetim Paneli
            </a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
            </a>
        </div>
    </div>

    <!-- Boşluk -->
    <div class="my-3"></div>

    <!-- Kitap Ekle ve Search Bar -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <!-- Kitap Ekle Butonu -->
        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Kitap Ekle
        </a>


        <!-- Ortalanmış Searchbar -->
        <form method="get" class="d-flex" role="search" style="max-width: 400px; width: 100%; margin: 0 auto;">
            <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control form-control-sm" placeholder="Kitap, yazar, kategori veya yayınevi ara..." />
            <button type="submit" class="btn btn-outline-secondary btn-sm ms-2">
                <i class="bi bi-search"></i>
            </button>
        </form>

    </div>
    <h2 class="mb-0">📚 Kitap Listesi</h2>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Kapak</th>
                <th>Kitap Adı</th>
                <th>Fiyat</th>
                <th>Yayın Yılı</th>
                <th>Baskı</th>
                <th>Kategori</th>
                <th>Yayınevi</th>
                <th>Yazar(lar)</th>
                <th>Açıklama</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <img src="@(string.IsNullOrEmpty(book.CoverImage) ? "/BookCoverImages/defaultBookCover.png" : book.CoverImage)"
                             class="img-fluid rounded" style="max-height: 60px;" alt="Kapak Görseli" />
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Price.ToString("C")</td>
                    <td>@book.PublicationYear</td>
                    <td>@book.EditionNumber</td>
                    <td>@(string.IsNullOrEmpty(book.CategoryName) ? "Kategori yok" : book.CategoryName)</td>
                    <td>@(string.IsNullOrEmpty(book.PublisherName) ? "Yayınevi yok" : book.PublisherName)</td>
                    <td>
                        @if (book.AuthorNames != null && book.AuthorNames.Any())
                        {
                            @string.Join(", ", book.AuthorNames)
                        }
                        else
                        {
                            <span class="text-muted">Yazar bilgisi yok</span>
                        }
                    </td>
                    <td>@book.CoverText</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-area="AdminPanel" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id"  method="post" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>
                            <form asp-area="AdminPanel" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kitabı silmek istediğinize emin misiniz?')">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
