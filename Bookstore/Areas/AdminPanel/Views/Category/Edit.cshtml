@model Bookstore.Areas.AdminPanel.ViewModels.Category_VM.UpdateCategory_VM

@{
    ViewData["Title"] = "Kategori Güncelle";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">
        <i class="bi bi-pencil-square me-2"></i> Kategori Güncelle
    </h2>

    <form asp-area="AdminPanel" asp-controller="Category" asp-action="Edit" method="post" class="bg-light p-4 rounded shadow-sm">

        
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Örn: Polisiye, Roman, Tarih..." />
            <span asp-validation-for="CategoryName" class="text-danger small"></span>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
