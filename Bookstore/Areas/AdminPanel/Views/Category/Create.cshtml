@model Bookstore.Areas.AdminPanel.ViewModels.Category_VM.CreateCategory_VM

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-folder-plus me-2"></i>Yeni Kategori Ekle
    </h2>

    <form asp-area="AdminPanel" asp-controller="Category" asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Kategori Adı -->
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Kategori adı giriniz (örnek: Roman)" />
            <span class="form-text text-muted">Kategori adı en fazla 50 karakter olabilir.</span>
            <span asp-validation-for="CategoryName" class="text-danger small"></span>
        </div>

        <!-- Butonlar -->
        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
