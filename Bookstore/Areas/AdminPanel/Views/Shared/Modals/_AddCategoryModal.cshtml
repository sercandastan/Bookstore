<!-- Modal: Kategori Ekle -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content shadow-lg">
			<div class="modal-header bg-primary text-white">
				<h5 class="modal-title" id="addCategoryLabel"><i class="bi bi-folder-plus me-2"></i>Yeni Kategori Ekle</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
			</div>
			<form id="categoryModalForm">
				<div class="modal-body">
					<input name="CategoryName" class="form-control" placeholder="Kategori Adı" required />
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-success"><i class="bi bi-save me-1"></i> Kaydet</button>
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
				</div>
			</form>
		</div>
	</div>
</div>
