@using Bookstore.Models.ViewModels.Author_VM
@model UpdateAuthor_VM

@{
    ViewData["Title"] = "Yazar Güncelle";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">
        <i class="bi bi-pencil-square me-2"></i>Yazar Güncelle
    </h2>

    <form asp-area="AdminPanel" asp-controller="Author" asp-action="Edit" method="post" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Ad Soyad</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BirthYear" class="form-label">Doğum Yılı</label>
            <input asp-for="BirthYear" class="form-control" />
            <span asp-validation-for="BirthYear" class="text-danger small"></span>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-info text-white">
                <i class="bi bi-save me-1"></i> Güncelle
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
