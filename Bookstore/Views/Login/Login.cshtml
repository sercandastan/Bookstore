@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model Bookstore.Models.DTOs.Login.Login_DTO
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid vh-100 d-flex p-0">
    <!-- Sol Kısım: Görsel, İkon ve Motto -->
    <div class="col-12 col-md-6 d-none d-md-flex auth-left position-relative">
        <!-- Opsiyonel arka plan resmi eklemek için auth-left CSS güncellenebilir -->
        <div class="text-center">
            <div class="auth-logo mb-4">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/sslogoo.png" alt="SatırSatır.com Logo" class="img-fluid" /></a>
                
            </div>
            <h1 class="auth-motto">
                Her <span class="highlight">satır</span> yeni bir dünyaya açılan kapıdır
            </h1>

        </div>
    </div>

    <!-- Sağ Kısım: Modern Giriş Formu -->
    <div class="col-12 col-md-6 d-flex align-items-center justify-content-center bg-light">
        <div class="auth-card w-100" style="max-width: 400px;">
            <h3 class="fw-bold text-center mb-4 text-primary">Giriş Yap</h3>
            <form asp-area="" asp-controller="Login" asp-action="Login" method="post" novalidate>
                <div class="form-floating mb-3">
                    <input asp-for="EmailOrUserName" type="text" class="form-control" id="floatingInput" placeholder="username veya username@mail.com" />
                    <label for="floatingInput">E-posta veya Kullanıcı Adı</label>
                    <span asp-validation-for="EmailOrUserName" class="text-danger small"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifreniz" />
                    <label for="floatingPassword">Şifre</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
  
                    <a asp-action="ForgotPassword" class="small text-secondary">Şifremi Unuttum?</a>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-accent btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap
                    </button>
                </div>
            </form>
            <div class="text-center mt-4">

                <span>Henüz hesabınız yok mu? </span><a asp-action="Register" class="text-accent fw-semibold">Satırlan...</a>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
