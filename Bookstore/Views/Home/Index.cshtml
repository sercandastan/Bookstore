@model IEnumerable<Bookstore.Models.DTOs.Book.Book_DTO>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📚 Kitaplar</h2>
        <a href="/Login/Login" class="btn btn-outline-primary">
            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
        </a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm position-relative border-0">
                    <img src="@(string.IsNullOrEmpty(item.CoverImage) ? "/BookCoverImages/defaultBookCover.png" : item.CoverImage)"
                         class="card-img-top rounded-top"
                         alt="Kapak Görseli"
                         style="object-fit: cover; height: 250px;" />


                    <button class="btn btn-outline-secondary  cart-button position-absolute top-0 end-0 m-2 rounded-circle"
                            title="Sepete Ekle">
                        <i class="bi bi-cart-plus"></i>
                    </button>


                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@item.Title</h5>
                        <p class="card-text text-muted small">
                            <strong>Fiyat:</strong> ₺@item.Price.ToString("N2") <br />
                            <strong>Yayın Yılı:</strong> @item.PublicationYear <br />
                            <strong>Baskı:</strong> @item.EditionNumber <br />
                            <strong>Kategori:</strong> @(string.IsNullOrEmpty(item.CategoryName) ? "Kategori yok" : item.CategoryName) <br />
                            <strong>Yayınevi:</strong> @(string.IsNullOrEmpty(item.PublisherName) ? "Yayınevi yok" : item.PublisherName) <br />
                            <strong>Yazar(lar):</strong> @(item.AuthorNames != null && item.AuthorNames.Any()
                        ? string.Join(", ", item.AuthorNames)
                        : "Yazar bilgisi yok") <br />
                            <strong>Açıklama:</strong> @item.CoverText
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
