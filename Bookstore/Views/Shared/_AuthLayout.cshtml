<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Bookstore</title>

    <!-- Stil dosyaları -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex align-items-center" style="min-height: 100vh;">
    <div class="container">
        @RenderBody()
    </div>

    <!-- 🟢 JavaScript dosyaları sırasıyla -->
    <!-- 1. jQuery (bu şart) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- 2. jQuery validate ve unobtrusive validation (isteğe bağlı ama genelde gereklidir) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/jquery.validate.unobtrusive.min.js"></script>

    <!-- 3. Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 4. Proje özel JS dosyaları -->
    <script src="~/js/register.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
