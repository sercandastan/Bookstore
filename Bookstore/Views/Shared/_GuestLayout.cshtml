@{
    Layout = null;
    var title = ViewData["Title"] ?? "SatırSatır.com";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Kitap alışverişinin en güvenilir adresi SatırSatır.com" />

    <title>@title - SatırSatır.com</title>

    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    
    <link rel="stylesheet" href="~/css/guest.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

    <!-- Navbar (Guest) -->
    @await Html.PartialAsync("~/Views/Shared/Partials/_NavbarGuest.cshtml")

    <!-- Ana İçerik -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer  -->
    <footer class="footer text-center mt-5 py-3 border-top small text-muted">
        &copy; @DateTime.Now.Year - SatırSatır.com | Tüm hakları saklıdır.
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
