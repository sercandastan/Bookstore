@{
    var toastMessage = TempData["ToastMessage"] as string;
    var toastType = TempData["ToastType"] as string ?? "info";

    string bgColor = "bg-secondary";

    if (!string.IsNullOrEmpty(toastMessage))
    {
        bgColor = toastType switch
        {
            "success" => "bg-success",
            "danger" => "bg-danger",
            "warning" => "bg-warning",
            "info" => "bg-info",
            _ => "bg-secondary"
        };
    }
}

@if (!string.IsNullOrEmpty(toastMessage))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div class="toast text-white @bgColor border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @toastMessage
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        const toastEl = document.querySelector('.toast');
        const toast = new bootstrap.Toast(toastEl);
        toast.show();
    </script>
}
